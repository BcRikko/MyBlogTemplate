<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html>
<html
  lang="ja"
  b:version='2'
  b:css='false'
  b:defaultwidgetversion='2'
  b:js='false'
  b:layoutsVersion='3'
  b:responsive='true'
  b:templateVersion='1.3.0'
  xmlns='http://www.w3.org/1999/xhtml'
  xmlns:b='http://www.google.com/2005/gml/b'
  xmlns:data='http://www.google.com/2005/gml/data'
  xmlns:expr='http://www.google.com/2005/gml/expr'>

<head>
  <b:if cond='data:blog.pageType == &quot;index&quot;'>
    <title><data:blog.pageTitle/></title> 
  <b:else/>
    <b:if cond='data:blog.pageType != &quot;error_page&quot;'>
      <title><data:blog.title/>ï½œ<data:blog.pageName/></title>
    <b:else/>
      <title>404 Not Found</title>
    </b:if>
  </b:if>

  <b:skin version='1.3.0'><![CDATA[]]></b:skin>
</head>

<body>
  <header>
    <!-- Brand header -->
    <b:section id='s-header' showaddelement='no' maxwidgets='1'>
      <b:widget id='Header1' locked='true' title='header' version='1' visible='true'>
        <b:includable id='main'>
          <h1><b:include name='title'/></h1>
          <b:include name='description' />
        </b:includable>

        <b:includable id='title'>
          <a expr:href='data:blog:homepageUrl'><data:title/></a>
        </b:includable>
        <b:includable id='description'>
          <p><data:description /></p>
        </b:includable>
      </b:widget>
    </b:section>
  
    <!-- Navigation -->
    <b:section id='s-navigation' showaddelement='no' maxwidget='1'>
      <b:widget id='PageList1' type='PageList' title='Pages' version='1' visible='true'>
        <b:includable id='main'>
          <nav>
            <ul>
              <b:loop values='data:links' var='link'>
                <b:if cond='data:link.isCurrentPage'>
                  <li class='active'>
                    <data:link.title />
                  </li>
                <b:else/>
                  <li>
                    <a expr:href='data:link.href'><data:link.title /></a>
                  </li>
                </b:if>
              </b:loop>
            </ul>
          </nav>
        </b:includable>
      </b:widget>
    </b:section>
  </header>

  <!-- Main Contents -->
  <main>
    <b:section id='s-main' showaddelement='yes'>
      <b:widget id='Blog1' title='Article' type='Blog' version='1' visible='true'>
        <b:includable id='main'>
          <!-- Articles -->
          <b:loop values='data:posts' var='post'>
            <b:include data='post' name='post' />
          </b:loop>

          <!-- Navigation  -->
          <div>
            <b:include name='next-prev' />
          </div>
        </b:includable>

        <!-- Article -->
        <b:includable id='post' var='post'>
          <article>
            <b:if cond='data:post.firstImageUrl'>
              <meta expr:content='data:post.firstImageUrl' itemprop='image' />
            </b:if>

            <!-- Article header -->
            <header>
              <h1>
                <b:if cond='data:post.link'>
                  <a expr:href='data:post.link'><data:post.title/></a>
                <b:else/>
                  <b:if cond='data:post.url'>
                    <a expr:href='data:post.url'><data:post.title/></a>
                  <b:else/>
                    <data:post.title/>
                  </b:if>
                </b:if>
              </h1>

              <span>Publish:</span>
              <time expr:datetime='data:post.timestampISO8601'>
                <data:post.timestampISO8601/>
              </time>
              <span>Last updated:</span>
              <time expr:datetime='data:post.lastUpdatedISO8601'>
                <data:post.lastUpdatedISO8601/>
              </time>

              <b:if cond='data:post.labels'>
                <span>Labels:</span>
                <b:loop values='data:post.labels' var='label'>
                  <a expr:href='data:label.url' rel='tag'>
                    <data:label.name />
                  </a>
                </b:loop>
              </b:if>
            </header>

            <!-- Article content(top) -->
            <b:if cond='data:blog.pageType != &quot;item&quot;'>
              <b:if cond='data:blog.pageType != &quot;static_page&quot;'>
                <section expr:id='&quot;summary&quot; + data:post.id'>
                  <!-- content -->
                  <data:post.body />
                  <b:if cond='data:post.hasJumpLink'>
                    <a expr:href='data:post.url' expr:title='data:post.title'>
                      <data:post.jumpText/>
                    </a>
                  </b:if>
                </section>
              </b:if>
            </b:if>
            <!-- Article content(item) -->
            <b:if cond='data:blog.pageType == &quot;item&quot;'>
              <section>
                <data:post.body />
              </section>
            </b:if>
            <!-- Article content(static_page) -->
            <b:if cond='data:blog.pageType == &quot;static_page&quot;'>
              <section>
                <data:post.body />
              </section>
            </b:if>

            <footer>
              <!-- TODO: share buttons -->
              <!-- TODO: comments -->
            </footer>
          </article>
        </b:includable>

        <!-- Navigation -->
        <b:includable id='next-prev'>
          <div>
            <b:if cond='data:newerPageUrl'>
              <a expr:href='data:newerPageUrl' expr:title='data:newerPageTitle'>
                <data:newerPageTitle />
              </a>
            </b:if>

            <a expr:href='data:blog.homepageUrl'>
              <data:homeMsg />
            </a>

            <b:if cond='data:olderPageUrl'>
              <a expr:href='data:olderPageUrl' expr:title='data:olderPageTitle'>
                <data:olderPageTitle />
              </a>
            </b:if>
          </div>
        </b:includable>
      </b:widget>
    </b:section>
  </main>

  <!-- Footer -->
  <footer>
    <b:section id='s-footer'>
    </b:section>
  </footer>

  <b:include data='blog' name='google-analytics'/>
</body>

</html>
