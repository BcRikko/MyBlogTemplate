<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html>
<html
  lang="ja"
  b:version='2'
  b:css='false'
  b:defaultwidgetversion='2'
  b:js='false'
  b:layoutsVersion='3'
  b:responsive='true'
  b:templateVersion='1.3.0'
  xmlns='http://www.w3.org/1999/xhtml'
  xmlns:b='http://www.google.com/2005/gml/b'
  xmlns:data='http://www.google.com/2005/gml/data'
  xmlns:expr='http://www.google.com/2005/gml/expr'>

<head>
  <b:if cond='data:blog.pageType == &quot;index&quot;'>
    <title><data:blog.pageTitle/></title> 
  <b:else/>
    <b:if cond='data:blog.pageType != &quot;error_page&quot;'>
      <title><data:blog.title/>ï½œ<data:blog.pageName/></title>
    <b:else/>
      <title>404 Not Found</title>
    </b:if>
  </b:if>

  <b:skin version='1.3.0'><![CDATA[]]></b:skin>
</head>

<body>
  <header>
    <b:section id='header' showaddelement='no' maxwidgets='1'>
      <b:widget id='Header1' locked='true' title='header' version='1' visible='true'>
        <b:includable id='main'>
          <h1><b:include name='title'/></h1>
        </b:includable>

        <b:includable id='title'>
          <a expr:href='data:blog:homepageUrl'><data:title/></a>
        </b:includable>
      </b:widget>
    </b:section>
  
    <b:section id='navigation' showaddelement='no'>
    </b:section>
  </header>

  <main>
    <b:section id='main' showaddelement='yes'>
      <b:widget id='Blog1' title='post article' type='Blog' version='1'></b:widget>
    </b:section>
  </main>

  <footer>
    <b:section id='footer'>
    </b:section>
  </footer>

  <b:include data='blog' name='google-analytics'/>
</body>

</html>
